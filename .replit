modules = ["nodejs-20", "python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Next.js Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Feedback Server"

[[workflows.workflow]]
name = "Next.js Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx next dev -p 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "Feedback Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "curl http://localhost:5000"

[deployment]
run = ["sh", "-c", "npx next dev -p 5000"]

[[ports]]
localPort = 5000
externalPort = 80
